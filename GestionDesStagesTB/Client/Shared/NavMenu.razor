<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">GestionDesStagesTB</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        <AuthorizeView Policy="@GestionDesStagesTB.Shared.Policies.Policies.EstEntreprise">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="entrepriseedit">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Mon profil
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="stageedit">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Ajouter un stage
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="stageview">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Tableau des stages
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Policy="@GestionDesStagesTB.Shared.Policies.Policies.EstEtudiant">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="etudiantedit">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Mon profil
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="stageview">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Tableau des stages
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Policy="@GestionDesStagesTB.Shared.Policies.Policies.EstCoordonateur">
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="coordonateur">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Coordonateur
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>

    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
